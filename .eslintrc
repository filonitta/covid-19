{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"jsx": true
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"globals": {
		"i18n": "readonly",
		"store": "writable"
	},
	"rules": {
		"no-console": "off",
		"no-unused-vars": "off",
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	},
	"settings": {
		"react": {
		  "version": "detect"
		}
	},
	"plugins": [
		"react-hooks"
	],
}